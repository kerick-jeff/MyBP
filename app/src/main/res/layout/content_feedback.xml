<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <android.support.v4.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textViewFrom"
                android:hint="@string/feedback_from" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:id="@+id/editTextFeedback"
                android:hint="@string/feedback_feedback"
                android:padding="12dp" />

            <CheckBox
                android:text="@string/feedback_screenshots_logs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/checkBoxScreenshotsLogs"
                android:padding="12dp"
                android:checked="true"
                android:textColor="@color/textColor" />

            <Button
                android:text="take screen shot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/buttonScreenShot"
                android:onClick="onClickScreenShot" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:id="@+id/imageViewScreenShot"
                android:background="@color/gray" />

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</RelativeLayout>