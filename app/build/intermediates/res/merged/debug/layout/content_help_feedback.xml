<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <android.support.v4.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:text="@string/feedback_send"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/buttonSendFeedback"
                style="@style/ButtonModerate"
                android:drawableLeft="@drawable/ic_feedback_teal_500_36dp"
                android:drawableStart="@drawable/ic_feedback_teal_500_36dp"
                android:onClick="onClickSendFeedback"
                android:gravity="center_vertical|start" />

            <View
                android:id="@+id/divider"
                style="@style/HorizontalDivider" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/linearLayoutHelp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewPopular"
                    android:hint="@string/help_popular" />

                <TextView
                    android:text="No results found"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewResults" />

                <View
                    android:id="@+id/divider2"
                    style="@style/HorizontalDivider" />

                <Button
                    android:text="@string/help_browse_all"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/buttonBrowseAll"
                    style="@style/ButtonModerate" />
            </LinearLayout>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</RelativeLayout>